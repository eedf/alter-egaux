extends layout.pug
block title
    title=titre
block content
    style=paddingvalue
    .alert.alert-info
        h5 Liste des événements :
    table.table
        tr
            each elt in list
                td.col-md-3
                    figure.animated.bounceInUp
                        a(href=elt.cheminaffiche, style='cursor:zoom-in')
                            img.img.img-fluid.img-responsive(src="/asset/docs/evenements/min/"+ elt.cheminminiature )
                        figcaption
                            a.btn.btn-info(href=elt.lien) Télécharger le guide
