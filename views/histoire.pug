block title
    title=titre
block content
    .alert.alert-info
        h3 Les personnages :
    ul.list-inline
        li.list-inline-item
            img.animated.bounceInUp(src="/asset/img/personnages/carlos.jpg",id="a")
        li.list-inline-item
