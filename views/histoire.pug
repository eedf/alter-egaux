                    a.btn.btn-success(href="/asset/docs/histoires/episode3.pdf") Télécharger
                        i.fa.fa-download
    table.table.stripped
        thead
            th #Episode
            th Titre
            th Aperçu
            th Téléchargement
        tbody
            tr
                td 1
                td L'objet mystérieux
                td
                    a(data-toggle='modal', data-target='#ep1', style="cursor:zoom-in;")
                        img.img-thumbnail(src="/asset/img/thumbnails/ep1.jpg", alt="" width="20%")
                td 
                    a.btn.btn-info(href="/asset/docs/histoires/episode1.pdf")
                        i.fa.fa-download
            tr
                td 2
                td L'été du Nynom
                td
                    a(data-toggle='modal', data-target='#ep2', style="cursor:zoom-in;")
                        img.img-thumbnail(src="/asset/img/thumbnails/ep2.jpg", alt="", width="20%")
                td
                    a.btn.btn-info(href="/asset/docs/histoires/episode2.pdf")
                        i.fa.fa-download
            tr
                td 3
                td Des retrouvailles étonnantes
                td
                    a(data-toggle='modal', data-target='#ep3', style="cursor:zoom-in;")
                        img.img-thumbnail(src="/asset/img/thumbnails/ep3.jpg", alt="", width="20%")
                td
                    a.btn.btn-info(href="/asset/docs/histoires/episode3.pdf")
                        i.fa.fa-download
    script.
        $("img").mouseenter(function (evt, btn) {
        $("#" + evt.currentTarget.id).animateCss('flipInY');
        $("p").html(descriptionpersonnage[evt.currentTarget.id])});
